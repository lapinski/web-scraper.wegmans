{
  "name": "web-scraper-wegmans",
  "version": "1.0.0",
  "description": "A web scraper for Wegman's receipt data.",
  "main": "index.js",
  "repository": "git@gitlab.com:lapinski/web-scraper.wegmans.git",
  "scripts": {
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "debug": "ts-node ./src/index.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json -t codeFrame",
    "lint-fix": "npm run lint -- --fix",
    "prebuild": "npm run -s clean",
    "clean": "rm -rf dist/",
    "build": "npm run lint && npm run build-ts",
    "build-ts": "tsc",
    "test": "jest .*\\.test\\.ts",
    "test:coverage": "npm run test -- --collectCoverage && cat ./src/coverage/lcov.info | coveralls",
    "predb": "npm run build",
    "db": "typeorm",
    "db:generate": "npm run db -- migration:generate",
    "db:migrate": "npm run db -- migration:run",
    "db:revert": "npm run db --  migration:revert",
    "docs": "typedoc --out docs src/"
  },
  "keywords": [
    "web-scraper",
    "wegmans"
  ],
  "author": "Alex Lapinski <contact@alexlapinski.name>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "convict": "^4.4.0",
    "dotenv": "^6.2.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "pg": "^7.7.1",
    "puppeteer": "^1.4.0",
    "purify-ts": "^0.11.0",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.9",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.10",
    "@types/convict": "^4.2.1",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.12",
    "@types/lodash": "^4.14.119",
    "@types/moment": "^2.13.0",
    "@types/puppeteer": "^1.11.1",
    "@types/ramda": "types/npm-ramda#dist",
    "@types/winston": "^2.4.4",
    "coveralls": "^3.0.2",
    "eclint": "^2.8.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jsverify": "^0.8.4",
    "lint-staged": "^8.1.3",
    "source-map-support": "^0.5.9",
    "substitute.js": "^1.0.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "npx eclint fix ./src/**/*.ts",
      "npm run lint -- --fix",
      "git add"
    ],
    "*.json": [
      "npx eclint fix ./*.json",
      "git add"
    ],
    "*.yml": [
      "npx eclint fix ./*.yml",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "html",
      "lcov"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "rootDir": "src/",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/tests/jest.setup.ts"
  }
}
